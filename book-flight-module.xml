<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="book-flight-module" parallel="tests" thread-count="3">
    <test name="book-flight-test-1">
        <parameter name="noOfPassengers" value="1"></parameter>
        <parameter name="expectedPrice" value="$584 USD"></parameter>
        <classes>
            <class name="com.newtours.tests.BookFlightTest"></class>
        </classes>
    </test>
    <test name="book-flight-test-2">
        <parameter name="noOfPassengers" value="2"></parameter>
        <parameter name="expectedPrice" value="$1169 USD"></parameter>
        <classes>
            <class name="com.newtours.tests.BookFlightTest"></class>
        </classes>
    </test>
    <test name="book-flight-test-3">
        <parameter name="noOfPassengers" value="3"></parameter>
        <parameter name="expectedPrice" value="$1753 USD"></parameter>
        <classes>
            <class name="com.newtours.tests.BookFlightTest"></class>
        </classes>
    </test>
    <test name="book-flight-test-4">
        <parameter name="noOfPassengers" value="4"></parameter>
        <parameter name="expectedPrice" value="$2338 USD"></parameter>
        <classes>
            <class name="com.newtours.tests.BookFlightTest"></class>
        </classes>
    </test>
</suite>